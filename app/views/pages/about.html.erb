<div class="app-card-container">
  <div class="card">
    <h1>learn about meh</h1>

    <hr>
    
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "solodance.jpg", width: 300, alt: "Profile Image", class: 'profile-img' %>
        
        <div class="skills">
          <%= @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div 
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %> 
        </div>
      </div>
        
      <div class="col-md-8"> 
        <p>Sup, m'name be Tanner an' I love ta dance</p>
        <p>This is content peeps, i gots shiz to talkz aboutz</p>
      
        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#experienceHistory"
            aria-expanded="false"
            aria-controller="experienceHistory"
          >
            Experience History
          </button>
          
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
          >
            Education
          </button>
        </p>
          
        <p>
          <div class="collapse" id="experienceHistory">
            <div class="card card-block">
              JOBBBSSSSSSSSSS
            </div>
            <div class="card card-block">
              ANOTHER JOBBBBBB
            </div>
          </div>
          
          <div class="collapse" id="education">
            <div class="card card-block">
              VIEWMONT HIGHSCHOOL BOIS
            </div>
            <div class="card card-block">
              READ ET AN WEEP
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>

